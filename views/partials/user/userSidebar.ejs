        e.preventDefault();

        try{
            const response =  await fetch("/user/logout",{
            method:"post",
        });

        const data = await response.json();
       

        if(data.success){
            Swal.fire({
                icon:"success",
                title:"log out successfully",
                timer:1500
            }).then(()=>{
                window.location.href = "/user/login";
            })
        }else{
            Swal.fire({
                icon:"error",
                title:"server error"
            });
        }
        }catch(err){
            console.log('error while login out',err);
            Swal.fire({
                icon:"error",
                title:"server error"
            });
        }
