    <script>
       document.addEventListener('DOMContentLoaded',function(){
            const newUser =  <%= isNewUser %>

            console.log("hy",newUser)

            if (newUser) {
          Swal.fire({
            title: 'Welcome to \nBLUR VINTAGE ★',
            text: 'Please login or register to start shopping!',
            icon: 'info',
            showCancelButton: true,
            confirmButtonText: 'already our member? login',
            cancelButtonText: 'new member ? register',
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#28a745',
            allowOutsideClick: true,
          }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to login page
                window.location.href = '/user/login';
            } else if (result.dismiss === Swal.DismissReason.cancel) {
                // Redirect to register page
                window.location.href = '/user/register';
            }
          });
    }

        let refferalSuccess = <%= referalSuccess %>
        

        if(refferalSuccess){
            Swal.fire({

                toast:true,
                position:"top-end",
                icon:"success",
                title:"Welcome 🤍",
                text: 'You received ₹500 as referral bonus in your wallet!',
              showConfirmButton: false,
             timer: 5000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
            });
        }

      })
       
    </script>