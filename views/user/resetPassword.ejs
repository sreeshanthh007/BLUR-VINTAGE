<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - BLUR VINTAGE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .logo {
            background-color: #e0e0e0;
            padding: 1rem 0;
            margin-bottom: 4rem;
        }

        .logo h1 {
            font-size: 2rem;
            font-weight: 500;
            text-align: center;
            margin: 0;
        }

        .reset-form {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem;
        }

        .reset-title {
            font-size: 2.5rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 4rem;
        }

        .verification-text {
            font-size: 1.5rem;
            text-align: center;
            margin-bottom: 2rem;
        }

        .form-control {
            background-color: #e0e0e0;
            border: none;
            border-radius: 25px;
            padding: 1rem;
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        .form-control:focus {
            background-color: #e0e0e0;
            box-shadow: none;
            border: none;
        }

        .submit-btn {
            background-color: #e0e0e0;
            border: none;
            border-radius: 5px;
            padding: 0.75rem 3rem;
            font-size: 1.1rem;
            font-weight: 600;
            color: #000;
            display: block;
            margin: 0 auto;
            transition: background-color 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #d0d0d0;
        }

        @media (max-width: 768px) {
            .reset-form {
                padding: 1rem;
            }

            .reset-title {
                font-size: 2rem;
                margin-bottom: 3rem;
            }

            .verification-text {
                font-size: 1.25rem;
            }
        }

        @media (max-width: 480px) {
            .reset-title {
                font-size: 1.75rem;
                margin-bottom: 2rem;
            }

            .verification-text {
                font-size: 1.1rem;
            }

            .form-control {
                font-size: 1rem;
            }

            .submit-btn {
                width: 100%;
                padding: 0.75rem 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Logo Section -->

    <!-- Reset Password Form -->
    <div class="container">
        <div class="reset-form">
            <h2 class="reset-title">RESET YOUR PASSWORD</h2>
            
            <form>
                <h3 class="verification-text">Enter Your Email for verification</h3>
                
                <div class="form-group">
                    <input type="email" 
                           class="form-control" 
                           id="email" 
                           placeholder="Enter your email"
                           required>
                </div>
                
                <button type="submit" class="submit-btn">
                    SUBMIT
                </button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


<script>

document.querySelector("form").addEventListener("submit",async (e)=>{
  e.preventDefault()

    const email = document.getElementById("email").value;
    sessionStorage.setItem("email",email)

    try {
        const response = await fetch("/user/email-verification",{
            headers:{
                "Content-Type":"application/json"
            },
            method:"post",
            body:JSON.stringify({email})
        });
        const result = await response.json()
        if(response.ok){
            alert(result.message)
            window.location.href="/user/check-email"
        }else{
            alert(result.message)
        }
    } catch (error) {
        console.log("error in resent otp for reset password",error.message);
        
    }
})

</script>