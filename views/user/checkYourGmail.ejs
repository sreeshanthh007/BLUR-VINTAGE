<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification - BLUR VINTAGE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .header-bg {
            background-color: #e0e0e0;
            padding: 1rem;
        }

        .brand {
            font-size: 2rem;
            font-weight: 500;
            letter-spacing: 1px;
        }

        .otp-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .otp-input {
            background-color: #e0e0e0;
            border: none;
            padding: 1rem;
            font-size: 1.2rem;
            text-align: center;
            letter-spacing: 2px;
            width: 100%;
            margin: 1rem 0;
        }

        .continue-btn {
            background-color: #e0e0e0;
            border: none;
            color: #000;
            padding: 1rem 3rem;
            font-size: 1.2rem;
            transition: background-color 0.3s ease;
            width: 100%;
            max-width: 300px;
        }

        .continue-btn:hover {
            background-color: #d0d0d0;
        }

        .resend-link {
            color: #000;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .resend-link:hover {
            text-decoration: underline;
            color: #000;
        }

        @media (max-width: 576px) {
            .brand {
                font-size: 1.5rem;
            }

            .otp-container {
                padding: 1rem;
            }

            .continue-btn {
                padding: 0.75rem 2rem;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <!-- <header class="header-bg text-center">
        <h1 class="brand mb-0">BLUR VINTAGE â˜…</h1>
    </header> -->

    <!-- Main Content -->
    <main class="container">
        <div class="otp-container">
            <div class="text-center">
                <h2 class="mb-5">Check your Gmail, we sent a otp to your account</h2>
                
                <div class="mb-4">
                    <h3 class="mb-3">Enter OTP</h3>
                    <input type="text" 
                           class="otp-input" 
                           maxlength="6" 
                           pattern="[0-9]*" 
                           inputmode="numeric"
                           autocomplete="one-time-code">
                </div>

                <div class="mb-5">
                    <a href="#" class="resend-link">resent OTP</a>
                </div>

                <div class="d-flex justify-content-center">
                    <button class="continue-btn">
                        CONTINUE
                    </button>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


<script>
    document.querySelector(".continue-btn").addEventListener("click",async(e)=>{
        e.preventDefault();

        const otp = document.querySelector(".otp-input").value;
        const email = sessionStorage.getItem("email");
        
        if(!otp){
            alert("please enter the otp");
            return;
        }

        try {
            const response = await fetch("/user/check-email",{
                method:"post",
                headers:{
                    "Content-Type":"application/json"
                },
                body:JSON.stringify({otp,email})
            });

            const data = await response.json();
            console.log("server",data);
            
            if(data.ok){
                alert("otp verified successfully");
                window.location.href="/user/reset-password"
            }else{
                alert(data.message);
            }
        } catch (error) {
            console.log("error while verifiyng otp",error.message);
        }
    })
</script>