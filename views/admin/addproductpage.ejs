    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
        let cropper1, cropper2, cropper3, cropper4;

        function initCropper(imageId, previewId, cropperVariable) {
            const image = document.getElementById(imageId);
            const preview = document.getElementById(previewId);

            if (image && !window[cropperVariable]) {
                window[cropperVariable] = new Cropper(image, {
                    aspectRatio: 1,
                    viewMode: 1,
                    preview: preview,
                    guides: true,
                    background: false,
                    zoomable: true,
                    crop(event) {
                        const canvas = window[cropperVariable].getCroppedCanvas();
                        preview.src = canvas.toDataURL();
                        document.getElementById(previewId).style.display = 'block';  // Show preview
                    }
                });
            }
        }

        function handleImageChange(event, imageId, previewId, cropperVariable) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = document.getElementById(imageId);
                img.src = e.target.result;
                initCropper(imageId, previewId, cropperVariable);
            };

            reader.readAsDataURL(event.target.files[0]);
        }

        // Image 1
        document.getElementById('img-1').addEventListener('change', function(event) {
            handleImageChange(event, 'pre-1', 'preview-1', 'cropper1');
        });

        // Image 2
        document.getElementById('img-2').addEventListener('change', function(event) {
            handleImageChange(event, 'pre-2', 'preview-2', 'cropper2');
        });

        // Image 3
        document.getElementById('img-3').addEventListener('change', function(event) {
            handleImageChange(event, 'pre-3', 'preview-3', 'cropper3');
        });

        // Image 4
        document.getElementById('img-4').addEventListener('change', function(event) {
            handleImageChange(event, 'pre-4', 'preview-4', 'cropper4');
        });
    </script>
