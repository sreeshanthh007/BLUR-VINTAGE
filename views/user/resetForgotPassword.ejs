<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - BLUR VINTAGE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .header-bg {
            background-color: #e0e0e0;
            padding: 1.5rem;
            margin-bottom: 3rem;
        }

        .brand {
            font-size: 2rem;
            font-weight: 500;
            letter-spacing: 1px;
        }

        .reset-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .form-control {
            background-color: #e0e0e0;
            border: none;
            border-radius: 50px;
            padding: 1rem 1.5rem;
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .form-control:focus {
            background-color: #e0e0e0;
            box-shadow: none;
            border: none;
        }

        .reset-btn {
            background-color: #e0e0e0;
            border: none;
            color: #000;
            padding: 0.75rem 3.5rem;
            font-size: 1.1rem;
            transition: background-color 0.3s ease;
            margin-top: 2rem;
        }

        .reset-btn:hover {
            background-color: #d0d0d0;
        }

        .form-label {
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }

        .error-text {
            color: red;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .valid-text {
            color: green;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        @media (max-width: 576px) {
            .brand {
                font-size: 1.5rem;
            }

            .reset-container {
                padding: 1rem;
            }

            .form-label {
                font-size: 1.1rem;
            }

            .reset-btn {
                padding: 0.75rem 2.5rem;
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header-bg text-center">
        <h1 class="brand mb-0">BLUR VINTAGE â˜…</h1>
    </header>

    <!-- Main Content -->
    <main class="container">
        <div class="reset-container">
            <h2 class="text-center mb-5">RESET YOUR PASSWORD</h2>
            
            <form id="resetPasswordForm">
                <div class="mb-4">
                    <label for="newPassword" class="form-label">Enter your new Password</label>
                    <input type="password" 
                           class="form-control" 
                           id="newPassword" 
                           required
                           minlength="8">
                    <div id="passwordStrength" class="error-text"></div>
                </div>

                <div class="mb-4">
                    <label for="confirmPassword" class="form-label">Confirm your new password</label>
                    <input type="password" 
                           class="form-control" 
                           id="confirmPassword" 
                           required
                           minlength="8">
                    <div id="passwordMatch" class="error-text"></div>
                </div>

                <div class="text-center">
                    <button type="submit" class="reset-btn">
                        RESET
                    </button>
                </div>
            </form>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const newPasswordInput = document.getElementById('newPassword');
        const confirmPasswordInput = document.getElementById('confirmPassword');
        const passwordStrength = document.getElementById('passwordStrength');
        const passwordMatch = document.getElementById('passwordMatch');

        // Inline password strength validation
        newPasswordInput.addEventListener('input', () => {
            const password = newPasswordInput.value;

            if (password.length < 8) {
                passwordStrength.textContent = 'Password must be at least 8 characters long.';
                passwordStrength.className = 'error-text';
            } else if (!/[A-Z]/.test(password)) {
                passwordStrength.textContent = 'Password must contain at least one uppercase letter.';
                passwordStrength.className = 'error-text';
            } else if (!/[a-z]/.test(password)) {
                passwordStrength.textContent = 'Password must contain at least one lowercase letter.';
                passwordStrength.className = 'error-text';
            } else if (!/[0-9]/.test(password)) {
                passwordStrength.textContent = 'Password must contain at least one number.';
                passwordStrength.className = 'error-text';
            } else if (!/[!@#$%^&*]/.test(password)) {
                passwordStrength.textContent = 'Password must contain at least one special character.';
                passwordStrength.className = 'error-text';
            } else {
                passwordStrength.textContent = 'Password is strong!';
                passwordStrength.className = 'valid-text';
            }
        });

        // Inline password match validation
        confirmPasswordInput.addEventListener('input', () => {
            if (newPasswordInput.value !== confirmPasswordInput.value) {
                passwordMatch.textContent = 'Passwords do not match.';
                passwordMatch.className = 'error-text';
            } else {
                passwordMatch.textContent = 'Passwords match!';
                passwordMatch.className = 'valid-text';
            }
        });

        // Form submission handler
        document.getElementById('resetPasswordForm').addEventListener('submit',async function(e) {
            e.preventDefault();

            const newPassword = newPasswordInput.value;
            const confirmPassword = confirmPasswordInput.value;
          const email =   sessionStorage.getItem("email")
            if (newPassword !== confirmPassword) {
                alert('Passwords do not match!');
                return;
            }

            try {
                const response = await fetch("/user/reset-password",{
                    method:"post",
                    headers:{
                        "Content-Type":"application/json"
                    },
                    body:JSON.stringify({newPassword,email})
                });
                const data = await response.json();
                console.log("rsponse",data)
                if(data.ok){
                    alert(data.message)
                    window.location.href="user/login"
                }else{
                    alert(data.message)
                }
            } catch (error) {
                console.log("error ",error.message);
                
            }
           
            // Add your password reset logic here
            console.log('Password reset submitted');
        });
    </script>
</body>
</html>
