        }

        /* Header Styles */
        .header {
            background-color: #e9ecef;
            padding: 1rem;
            text-align: center;
            border-bottom: 1px solid #dee2e6;
        }

        .header h1 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: bold;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 250px;
            background-color: #e9ecef;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 1000;
            transition: transform 0.3s ease;
        }

        .profile-section {
            padding: 2rem 1rem;
            text-align: center;
        }

        .profile-icon {
            width: 80px;
            height: 80px;
            background-color: #dee2e6;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }

        .profile-icon i {
            font-size: 2rem;
            color: #6c757d;
        }

        .nav-link {
            color: #495057;
            padding: 0.75rem 1.5rem;
            transition: all 0.3s ease;
        }

        .nav-link:hover, .nav-link.active {
            background-color: #212529;
            color: #fff;
        }

        /* Main Content Styles */
        .main-content {
            margin-left: 250px;
            padding: 2rem;
            transition: margin-left 0.3s ease;
        }

        .page-title {
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        /* Filter Styles */
        .filter-section {
            background-color: #e8f4f4;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        /* Table Styles */
        .table-container {
            background-color: #e8f4f4;
            border-radius: 8px;
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead {
            background-color: #212529;
            color: #fff;
        }

        .table th {
            padding: 1rem;
            font-weight: 500;
        }

        .table td {
            padding: 1rem;
            vertical-align: middle;
        }

        /* Button Styles */
        .btn-block {
            background-color: #dee2e6;
            color: #212529;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .btn-unblock {
            background-color: #212529;
            color: #fff;
        }

        .btn-block:hover, .btn-unblock:hover {
            opacity: 0.9;
        }

        /* Toggle Button */
        .sidebar-toggle {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1001;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 0.5rem;
        }

        /* Responsive Styles */
        @media (max-width: 991.98px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
            }

            .sidebar-toggle {
                display: block;
            }
        }

        @media (max-width: 767.98px) {
            .table-responsive {
                border-radius: 8px;
            }

            .filter-section {
                flex-direction: column;
                gap: 1rem;
            }
        }
    </style>
