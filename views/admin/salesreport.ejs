<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #2563eb;
            --success-green: #059669;
            --danger-red: #dc2626;
            --border-color: #e5e7eb;
            --light-bg: #f9fafb;
            --card-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            --hover-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
        }

        body {
            display: flex;
            min-height: 100vh;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container-fluid {
            margin-left: 250px;
            padding: 1.5rem;
            width: calc(100% - 250px);
            max-width: 1400px;
        }

        /* Enhanced Date Filter Styles */
        .date-filter {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
        }

        .date-filter:hover {
            box-shadow: var(--hover-shadow);
        }

        .date-filter .form-label {
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        .date-filter .form-select,
        .date-filter .form-control {
            border-radius: 8px;
            border: 1px solid var(--border-color);
            padding: 0.625rem;
            transition: all 0.2s ease;
        }

        .date-filter .form-select:focus,
        .date-filter .form-control:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.1);
        }

        /* Enhanced Summary Cards */
        .summary-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
            height: 100%;
        }

        .summary-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--hover-shadow);
        }

        .stat-title {
            font-size: 0.875rem;
            font-weight: 500;
            color: #6b7280;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .stat-value {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .percentage {
            font-size: 0.875rem;
            color: #6b7280;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Enhanced Table Styles */
        .table-container {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-top: 2rem;
            box-shadow: var(--card-shadow);
        }

        .custom-table {
            margin: 0;
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        .custom-table th {
            background-color: var(--light-bg);
            padding: 1rem;
            font-weight: 600;
            color: #374151;
            border-bottom: 2px solid var(--border-color);
        }

        .custom-table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid var(--border-color);
        }

        .custom-table tbody tr:hover {
            background-color: var(--light-bg);
        }

        /* Enhanced Button Styles */
        .btn-primary {
            background-color: var(--primary-blue);
            border: none;
            padding: 0.625rem 1.25rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn-primary:hover {
            background-color: #1d4ed8;
            transform: translateY(-1px);
        }

        .export-btn {
            background-color: #059669;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s ease;
        }

        .export-btn:hover {
            background-color: #047857;
            transform: translateY(-1px);
        }

        /* Badge Styles */
        .badge {
            padding: 0.5rem 0.75rem;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.75rem;
        }

        /* Responsive Styles */
        @media (max-width: 1200px) {
            .stat-value {
                font-size: 1.25rem;
            }
        }

        @media (max-width: 991.98px) {
            .container-fluid {
                margin-left: 0;
                width: 100%;
                padding: 1rem;
            }

            .date-filter {
                padding: 1rem;
            }

            .summary-card {
                padding: 1rem;
            }
        }

        @media (max-width: 768px) {
            .export-btn {
                width: 100%;
                justify-content: center;
                margin-top: 1rem;
            }

            .d-flex.justify-content-between {
                flex-direction: column;
            }

            .table-responsive {
                margin: 0 -1rem;
            }

            .custom-table th,
            .custom-table td {
                padding: 0.75rem;
                font-size: 0.875rem;
            }
        }

        @media (max-width: 576px) {
            .container-fluid {
                padding: 0.75rem;
            }

            .stat-title {
                font-size: 0.75rem;
            }

            .stat-value {
                font-size: 1.125rem;
            }

            .percentage {
                font-size: 0.75rem;
            }

            .custom-table {
                font-size: 0.75rem;
            }
        }

        /* Animation for summary cards */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .summary-card {
            animation: fadeInUp 0.5s ease forwards;
        }

        .summary-card:nth-child(1) { animation-delay: 0.1s; }
        .summary-card:nth-child(2) { animation-delay: 0.2s; }
        .summary-card:nth-child(3) { animation-delay: 0.3s; }
        .summary-card:nth-child(4) { animation-delay: 0.4s; }
    </style>
</head>
<body>
    <!-- Sidebar remains the same -->
    <nav class="sidebar">
        <div class="sidebar-content">
            <ul class="nav flex-column">
                <%-include('../../views/partials/admin/sidebar.ejs')%>
            </ul>
        </div>
    </nav>

    <div class="container-fluid m-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0 fw-bold">Sales Report</h1>
            <button class="export-btn" onclick="exportToExcel()">
                <i class="bi bi-download"></i>
                Export to Excel
            </button>
            <button class="export-btn" onclick="exportToPDF()">
                <i class="bi bi-file-earmark-pdf"></i>
                Export to PDF
            </button>
        </div>

        <!-- Enhanced Date Filter -->
        <div class="date-filter">
            <form action="/admin/sales-report" method="GET" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Date Range</label>
                    <select name="dateRange" class="form-select" id="dateRange">
                        <option value="day" <%= dateRange === 'day' ? 'selected' : '' %>>Today</option>
                        <option value="week" <%= dateRange === 'week' ? 'selected' : '' %>>This Week</option>
                        <option value="month" <%= dateRange === 'month' ? 'selected' : '' %>>This Month</option>
                        <option value="custom" <%= dateRange === 'custom' ? 'selected' : '' %>>Custom Range</option>
                    </select>
                </div>
                <div class="col-md-3 custom-dates <%= dateRange !== 'custom' ? 'd-none' : '' %>">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" value="<%= startDate %>" class="form-control">
                </div>
                <div class="col-md-3 custom-dates <%= dateRange !== 'custom' ? 'd-none' : '' %>">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" value="<%= endDate %>" class="form-control">
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
                </div>
            </form>
        </div>

        <!-- Enhanced Summary Cards -->
        <div class="row g-4">
            <div class="col-sm-6 col-lg-3">
                <div class="summary-card">
                    <div class="stat-title">Total Orders</div>
                    <div class="stat-value"><%= report.totalOrders.toLocaleString() %></div>
                    <div class="percentage">
                        <i class="bi bi-graph-up"></i>
                        AVG â‚¹<%= Math.round(report.averageOrderValue).toLocaleString() %>/order
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="summary-card">
                    <div class="stat-title">Gross Sales</div>
                    <div class="stat-value">â‚¹<%= report.totalGrossSales.toLocaleString() %></div>
                    <div class="percentage">
                        <i class="bi bi-currency-rupee"></i>
                        Total before discounts
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="summary-card">
                    <div class="stat-title">Total Discounts</div>
                    <div class="stat-value discount">â‚¹<%= report.totalDiscount.toLocaleString() %></div>
                    <div class="percentage">
                        <i class="bi bi-tag"></i>
                        <%= report.discountPercentage.toFixed(1) %>% of gross sales
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="summary-card">
                    <div class="stat-title">Net Revenue</div>
                    <div class="stat-value revenue">â‚¹<%= report.totalFinalRevenue.toLocaleString() %></div>
                    <div class="percentage">
                        <i class="bi bi-cash"></i>
                        Final revenue after discounts
                    </div>
                </div>
            </div>
        </div>

        <!-- Rest of the content remains the same -->
        <!-- Orders Table -->
        <div class="table-container">
            <h2 class="h5 mb-4">Order Details</h2>
            <div class="table-responsive">
                <table class="table custom-table">
                    <thead>
                        <tr>
                            <th>Order Number</th>
                            <th>Date</th>
                            <th>Subtotal</th>
                            <th>Coupon Discount</th>
                            <th>Product Offers</th>
                            <th>Final Amount</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% report.dailyData.forEach(day => {
                            day.orders.forEach(order => { %>
                                <tr>
                                    <td><%= order.orderNumber %></td>
                                    <td><%= moment(order.orderDate).format('DD-MM-YYYY') %></td>
                                    <td>â‚¹<%= order.subtotal.toLocaleString() %></td>
                                    <td class="text-danger">â‚¹<%= order.couponDiscount.toLocaleString() %></td>
                                    <td class="text-danger">â‚¹<%= order.productOffers.toLocaleString() %></td>
                                    <td>â‚¹<%= order.finalAmount.toLocaleString() %></td>
                                    <td><%= order.paymentMethod %></td>
                                    <td>
                                        <span class="badge <%= order.status === 'Delivered' ? 'bg-success' : 'bg-primary' %>">
                                            <%= order.status %>
                                        </span>
                                    </td>
                                </tr>
                        <% }); 
                        }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>
    <script>
        // Show/hide custom date inputs based on selection
        document.getElementById('dateRange').addEventListener('change', function() {
            const customDateInputs = document.querySelectorAll('.custom-dates');
            customDateInputs.forEach(input => {
                input.classList.toggle('d-none', this.value !== 'custom');
            });
        });

        // Export to Excel functionality
        function exportToExcel() {
        const orders = [];
        <% report.dailyData.forEach(day => {
            day.orders.forEach(order => { %>
                orders.push({
                    'Order Number': '<%= order.orderNumber %>',
                    'Date': '<%= moment(order.orderDate).format("DD-MM-YYYY") %>',
                    'Subtotal': <%= order.subtotal %>,
                    'Coupon Discount': <%= order.couponDiscount %>,
                    'Product Offers': <%= order.productOffers %>,
                    'Final Amount': <%= order.finalAmount %>,
                    'Payment Method': '<%= order.paymentMethod %>',
                    'Status': '<%= order.status %>'
                });
            <% });
        }); %>

        const worksheet = XLSX.utils.json_to_sheet(orders);
        const workbook = XLSX.utils.book_new();
        XLSX.utils.book_append_sheet(workbook, worksheet, 'Sales Report');
        
        // Generate filename with current date
        const filename = `sales-report-${moment().format('YYYY-MM-DD')}.xlsx`;
        XLSX.writeFile(workbook, filename);
    }

    function exportToPDF() {
        // Create jsPDF instance with proper initialization
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();

        // Define table columns and rows
        const tableColumn = [
            "Order Number",
            "Date",
            "Subtotal",
            "Coupon Discount",
            "Product Offers",
            "Final Amount",
            "Payment Method",
            "Status",
        ];
        const tableRows = [];

        <% report.dailyData.forEach(day => {
            day.orders.forEach(order => { %>
                tableRows.push([
                    '<%= order.orderNumber %>',
                    '<%= moment(order.orderDate).format("DD-MM-YYYY") %>',
                    'â‚¹<%= order.subtotal.toLocaleString() %>',
                    'â‚¹<%= order.couponDiscount.toLocaleString() %>',
                    'â‚¹<%= order.productOffers.toLocaleString() %>',
                    'â‚¹<%= order.finalAmount.toLocaleString() %>',
                    '<%= order.paymentMethod %>',
                    '<%= order.status %>',
                ]);
            <% });
        }); %>

        // Add title
        doc.setFontSize(15);
        doc.text("Sales Report", 14, 15);

        // Add report summary
        doc.setFontSize(11);
        doc.text(`Total Orders: <%= report.totalOrders %>`, 14, 25);
        doc.text(`Gross Sales: â‚¹<%= report.totalGrossSales.toLocaleString() %>`, 14, 32);
        doc.text(`Total Discounts: â‚¹<%= report.totalDiscount.toLocaleString() %>`, 14, 39);
        doc.text(`Net Revenue: â‚¹<%= report.totalFinalRevenue.toLocaleString() %>`, 14, 46);

        // Add table with proper configuration
        doc.autoTable({
            head: [tableColumn],
            body: tableRows,
            startY: 55,
            theme: 'grid',
            styles: {
                fontSize: 8,
                cellPadding: 2,
            },
            columnStyles: {
                0: { cellWidth: 25 }, // Order Number
                1: { cellWidth: 20 }, // Date
                2: { cellWidth: 22 }, // Subtotal
                3: { cellWidth: 22 }, // Coupon Discount
                4: { cellWidth: 22 }, // Product Offers
                5: { cellWidth: 22 }, // Final Amount
                6: { cellWidth: 25 }, // Payment Method
                7: { cellWidth: 20 }, // Status
            },
            headStyles: {
                fillColor: [37, 99, 235],
                fontSize: 9,
                halign: 'center'
            }
        });

        // Save with formatted date in filename
        const date = moment().format('YYYY-MM-DD');
        doc.save(`sales-report-${date}.pdf`);
    }

    </script>
</body>
</html>