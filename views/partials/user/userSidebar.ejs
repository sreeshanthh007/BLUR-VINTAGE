    .header {
        background-color: #e8e8e8;
    }
    
    .header h1 {
        font-size: 1.5rem;
        font-weight: bold;
    }
    
    .search-container {
        width: 200px;
    }
    
    .search-input {
        background-color: #f0e6e6;
        border: none;
        padding: 0.5rem 1rem;
    }
    
    .nav-link {
        color: #333;
        text-decoration: none;
    }
    
    .nav-link:hover {
        color: #000;
    }
    
    .sidebar-nav {
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
    }
    
    .profile-avatar {
        width: 120px;
        height: 120px;
        background-color: #f0f0f0;
